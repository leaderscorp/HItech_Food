<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="audit_trail_view_form" model="ir.ui.view">
            <field name="name">_view_form</field>
            <field name="model">audit_trail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="contract_no"/>
                                <field name="contract_account" />
                                <field name="consumer_number"/>
                                <field name="ibc_name"/>
                                <field name="agency_name"/>
                                <field name="cell_no"/>
                                <!--<field name="consumer_account_no"/>-->
                                <field name="latitude_no"/>
                                <field name="longitude_no"/>
                            </group>
                            <group>
                                <field name="attempt_date1"/>
                                <field name="attempt_date2"/>
                                <field name="attempt_date3"/>
                                <field name="call_date1"/>
                                <field name="call_date2"/>
                                <field name="attempt_smsdate1"/>
                                <field name="attempt_smsdate2"/>
                            </group>
                            <group>
                                <field name="no_roattempts"/>
                                <field name="no_smsattempts"/>
                                <field name="remarks_1"/>
                                <field name="remarks_2"/>
                                <field name="remarks_3"/>
                                <field name="consumer_name_new"/>
                                <field name="name_agent_physical"/>
                                <field name="name_agent_sms_attempt"/>
                                <field name="reason_notpaying"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="Audit_trail_view_tree" model="ir.ui.view">
            <field name="name">_view_tree</field>
            <field name="model">audit.trail</field>
            <field name="arch" type="xml">
                <tree>
                  <field name="contract_no"/>
                  <field name="contract_account" />
                  <field name="consumer_number"/>
                  <field name="ibc_name"/>
                  <field name="agency_name"/>
                  <field name="cell_no"/>
                  <!--<field name="consumer_account_no"/>-->
                  <field name="latitude_no"/>
                  <field name="longitude_no"/>
                  <field name="attempt_date1"/>
                  <field name="attempt_date2"/>
                  <field name="attempt_date3"/>
                  <field name="call_date1"/>
                  <field name="call_date2"/>
                  <field name="attempt_smsdate1"/>
                  <field name="attempt_smsdate2"/>
                  <field name="no_roattempts"/>
                  <field name="no_callattempts"/>
                  <field name="no_smsattempts"/>
                  <field name="remarks_1"/>
                  <field name="remarks_2"/>
                  <field name="remarks_3"/>
                  <field name="consumer_name_new"/>
                  <field name="name_agent_physical"/>
                  <field name="name_agent_sms_attempt"/>
                  <field name="reason_notpaying"/>
                </tree>
            </field>
        </record>

        <record id="audit_trail_action" model="ir.actions.act_window">
            <field name="name">audit trail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.trail</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="audit_trail_menu" name="Audit Trail" parent="pwc.pwc_root"
                  action="pwc.audit_trail_action" sequence="10"/>
    </data>
</odoo>