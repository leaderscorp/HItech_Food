<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    	<record id="limit_enhance_email_template" model="mail.template">
        	<field name="name">Limit Enhance</field>
            <field name="email_from"></field>
            <field name="email_to">${object.user_id.email}</field>
            <field name="subject">Limit Enhanced</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="False"/>
	  		<field name="body_html">
             <![CDATA[
                <header>
                <strong>Credit Limit Enhanced  ${object.partner_id.name}</strong>
                </header>
                <p>Credit limit has been Enhanced against ${object.name}.</p>
                <br /><br /><br /><br />
                <p>Sent Using Odoo</p>
            ]]>

	  		</field>
       	</record>
    </data>
</odoo>