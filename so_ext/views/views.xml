<odoo>
  <data>

       <record id="view_soda_line_tree" model="ir.ui.view">
            <field name="name">product.soda</field>
            <field name="model">product.soda</field>
            <field name="arch" type="xml">
              <tree name="Product Soda">
                  <field name="partner_id"/>
                  <field name="bundle_id"/>
                  <field name="shipping_charges"/>
                  <field name="packing_charges"/>
              </tree>
            </field>
       </record>
        <record id="view_product_soda_form" model="ir.ui.view">
            <field name="name">product.soda</field>
            <field name="model">product.soda</field>
            <field name="arch" type="xml">
                <form name="Product Soda">
                    <header>
                        <button name="SetConfirmed" string="Confirm" type="object" attrs="{'invisible': [('state', 'not in', ['Draft'])]}"/>
                        <button name="CreateSO" string="Create Sale Order" type="object" attrs="{'invisible': [('state', 'not in', ['Confirmed'])]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                  <sheet>
                  <group>
                      <group>
                  <field name="partner_id"/>
                  <field name="shipping_charges"/>
                    <field name="reference"/>
                    </group>
                      <group>
                  <field name="bundle_ids" string="Items" widget="many2many_tags"/>
                  <field name="packing_charges"/>
                    <field name="delivery_date"/>
                      </group>
                  </group>
                      <group>
                          <field name="delivery_terms_1" readonly="1" force_save="1"/>
                      </group>
                  <group>
                      <field name="line_ids">
                          <tree editable="bottom" create="0">
                              <field name="product_id"/>
                              <field name="qty"/>
                              <field name="uom_id" readonly="1" force_save="1"/>
                              <field name="unit_price"/>
                              <field name="market_value"/>
                              <field name="net_amount"/>
                              <field name="unit_so" readonly="1" force_save="1"/>
                              <field name="difference" string="+/-"/>
                          </tree>
                      </field>
                  </group>
                  </sheet>
              </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_product_soda">
      <field name="name">Product Soda</field>
      <field name="res_model">product.soda</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Product Soda" id="menu_product_soda" parent="sale.sale_order_menu" action="action_product_soda"/>



       <record id="view_product_bundle_tree" model="ir.ui.view">
            <field name="name">product.bundle</field>
            <field name="model">product.bundle</field>
            <field name="arch" type="xml">
              <tree name="Product Bundle">
                  <field name="name"/>
              </tree>
            </field>
       </record>
        <record id="view_product_bundle_form" model="ir.ui.view">
            <field name="name">product.bundle</field>
            <field name="model">product.bundle</field>
            <field name="arch" type="xml">
              <form name="Product Bundle">
                  <sheet>
                  <group>
                      <group>
                  <field name="name" string="Name"/>
                    </group>
                  </group>
                  <group>
                      <field name="product_ids">
                          <tree editable="bottom">
                              <field name="product_id"/>
                              <field name="uom_id"/>
                              <field name="unit_price" string="Soda/Mount"/>
                          </tree>
                      </field>
                  </group>
                  </sheet>
              </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_product_bundle">
      <field name="name">Product Bundle</field>
      <field name="res_model">product.bundle</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Product Bundle" id="menu_product_bundle" parent="sale.sale_order_menu" action="action_product_bundle"/>


        <record id="view_redistribution_tree" model="ir.ui.view">
            <field name="name">view.redistribution</field>
            <field name="model">redistribution.claim</field>
            <field name="arch" type="xml">
              <tree name="Claim">
                    <field name="picking_id" string="Delivery Order"/>
                      <field name="location_id" string="Town"/>
                      <field name="name"/>
                      <field name="date"/>
                    <field name="state"/>
              </tree>
            </field>
        </record>
        <record id="view_redistribution_claim" model="ir.ui.view">
            <field name="name">view_order_form</field>
            <field name="model">redistribution.claim</field>
            <field name="arch" type="xml">
              <form name="Claim">
                <header>
                                        <button name="submit" type="object" string="Submit For Approval"
                            attrs="{'invisible': [('state', 'not in', ['Draft'])]}"/>
                                        <button name="approved" type="object" string="Approved"
                            attrs="{'invisible': [('state', 'not in', ['Waiting For Approval'])]}"/>
                    <field name="state" widget="statusbar"/>

                </header>
                <sheet>
                  <group>
                    <group>
                    <field name="picking_id" string="Delivery Order"/>
                      <field name="location_id" string="Town"/>
                    </group>
                    <group>
                      <field name="name"/>
                      <field name="date"/>
                    </group>

                  </group>
                  <group name="Lines">
                    <field name="line_ids" nolabel="1">
                      <tree editable="bottom">
                          <field name="product_id" string="Product"/>
                          <field name="qty" string="Quantity"/>
                        <field name="type_id"/>
                        <field name="amount"/>
                        <field name="remarks"/>

                      </tree>
                    </field>

                  </group>
                </sheet>
              </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_claim">
      <field name="name">Redistribution Claims</field>
      <field name="res_model">redistribution.claim</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Redistribution Claim" id="menu_redistribution" parent="stock.menu_stock_warehouse_mgmt" action="action_claim"/>

              <record id="view_account_tax_inherit" model="ir.ui.view">
            <field name="name">view_account_tax_inherit</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='amount']" position="after">
                    <field name="soda_tax" string="Soda Tax"/>
                </xpath>
            </field>
              </record>
              <record id="view_stock_return" model="ir.ui.view">
            <field name="name">view_partner_form</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_return_moves']/tree/field[@name='uom_id']" position="after">
                    <field name="type_id"/>
                </xpath></field></record>
