<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    	<record id="credit_limit_alert_email_template" model="mail.template">
        	<field name="name">Credit Limit Alert</field>
            <field name="email_from"></field>
            <field name="email_to">${ctx['credit_limit_users']}</field>
            <field name="subject">Credit Limit Exceed</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="False"/>
	  		<field name="body_html">
             <![CDATA[
                <header>
                <strong>Credit Limit Approval  ${object.partner_id.name}</strong>
                </header>
                <p> It is Requested to you Please Revised Credit Limit against ${object.name}.</p>
                <br /><br /><br /><br />
                <p>Sent Using Odoo</p>
            ]]>

	  		</field>
       	</record>
    </data>
</odoo>